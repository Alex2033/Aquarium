                            .price-s__btns
                                a(href="but-ticket.html").button
                                    img(src="img/header/btn-img.svg", alt="Button image").button__img
                                    span Электронный билет в Океанариум

                            .price-s__tables
                                h2.inner-heading Цены на билеты

                                table.table
                                    tr.table__heading-row.table__row
                                        th.table__title С 1 сентября по 31 мая
                                    tr.table__row
                                        th.table__heading.table__col Тарифы
                                        th.table__heading.table__col Взрослый
                                        th.table__heading.table__col Дети от 7 лет, школьники и студенты дневных отделений
                                    tr.table__row
                                        th.table__heading.table__col Будние дни
                                        td.table__col 600
                                        td.table__col 400
                                    tr.table__row
                                        th.table__heading.table__col Выходные, праздничные дни
                                        td.table__col 700
                                        td.table__col 500

